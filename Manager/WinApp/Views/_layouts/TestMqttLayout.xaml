<UserControl x:Class="WinApp.Views.TestMqttLayout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinApp.Views"
      xmlns:vst="clr-namespace:Vst.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="DarkGray" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#ccc"
                BorderThickness="1"
                Padding="5"
                Margin="5 5 2.5 5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border>
                    <Label FontSize="20"
                   FontWeight="Bold"
                   Foreground="Black"
                   VerticalAlignment="Center"
                   Content="MQTT Testing" />
                </Border>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <vst:Button Background="DarkGreen" x:Name="ButtonConnect" Text="Connect" Url="test/connect" ></vst:Button>
                        <vst:Button Background="Black" x:Name="ButtonDisconnect" Text="Disconnect" Url="test/disconnect"></vst:Button>
                        <vst:Button Visibility="Collapsed" x:Name="ButtonSend" Text="Send"></vst:Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        
        <Border Grid.Column="1"
                Margin="2.5 5 5 5"
                Padding="5"
                BorderBrush="#ccc"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0">
                    <Label>Topic</Label>
                </TextBlock>
                <TextBox Grid.Row="1" 
                         Padding="5"
                         x:Name="Topic"
                         VerticalContentAlignment="Center"
                         Text="{Binding Path=TestPacket.Url}" />

                <TextBlock Grid.Row="2">
                    <Label>Payload</Label>
                </TextBlock>
                <TextBox Grid.Row="3"
                         Padding="5"
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         x:Name="Payload"
                         VerticalScrollBarVisibility="Auto"
                         VerticalAlignment="Stretch"
                         Text="{Binding Path=TestPacket.Value}"/>

                <TextBlock Grid.Row="4">
                    <Label>Repsonse</Label>
                    <Bold x:Name="ResponseURL" />
                </TextBlock>
                <TextBox x:Name="ResponseContext"
                         Grid.Row="5"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalAlignment="Stretch" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
