<UserControl x:Class="WinApp.Views.OpenServerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.Views.Server"
             xmlns:vst="clr-namespace:Vst.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="30" />
            <RowDefinition Height="160" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border>
            <Label FontSize="20"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Content="{Binding Path=Model.Name}" />
        </Border>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <vst:Button Background="DarkOrange" Text="Edit" x:Name="ButtonEdit" />
                <vst:Button Background="Black" x:Name="ButtonShow" Text="Show console"></vst:Button>
                <vst:Button Background="DarkGreen" x:Name="ButtonStop" Text="Stop" ></vst:Button>
            </StackPanel>

        </StackPanel>
        <Border Grid.Row="2" 
                Margin="5 20" 
                Padding="10"
                BorderBrush="#ccc" 
                BorderThickness="1" 
                CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Location" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Path}" />
                <StackPanel Grid.Row="0" 
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <vst:Button Text="open" 
                                x:Name="ButtonPath" 
                                Padding="3"
                                Height="26" />
                    <vst:Button Text="delete" 
                                Background="Red"
                                x:Name="ButtonDelete" 
                                Padding="3"
                                Height="26" />
                </StackPanel>
                <Label Grid.Row="1" Grid.Column="0" Content="File Name" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=FileName}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
